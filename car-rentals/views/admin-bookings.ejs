<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/style.css">
    <title>Admin - Manage Bookings</title>
</head>
<body>
    <header>
        <h1>Admin Dashboard - Bookings</h1>
        <a href="/auth/logout">Logout</a>
    </header>

    <h2>All Bookings</h2>
    <table>
        <tr>
            <th>Customer</th>
            <th>Car</th>
            <th>Booking Date</th>
            <th>Return Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        <% bookings.forEach(booking => { %>
            <tr>
                <td><%= booking.name %> <%= booking.surname %></td>
                <td><%= booking.brand %> <%= booking.model %></td>
                <td><%= booking.booking_date %></td>
                <td><%= booking.return_date %></td>
                <td><%= booking.status %></td>
                <td>
                    <% if (booking.status === "pending") { %>
                        <form action="/admin/approve-booking/<%= booking.id %>" method="POST">
                            <button>Approve</button>
                        </form>
                        <form action="/admin/cancel-booking/<%= booking.id %>" method="POST">
                            <button>Cancel</button>
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
